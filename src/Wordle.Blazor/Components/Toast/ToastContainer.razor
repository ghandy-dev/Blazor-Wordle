@namespace Wordle.Blazor.Components

<div class="toast-container">
    @for (int i = _messages.Count - 1; i >= 0 ; i--)
    {
        <Toast 
            @key="@_messages[i].Key"
            Key=@_messages[i].Key 
            Closed=@OnToastClosedAsync 
            Message=@_messages[i].Message
            DurationType=@_messages[i].DurationType />
    }
</div>
